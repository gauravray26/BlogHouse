<%- include("partials/header") %>

<div class="container">
    <h1 class="compose-heading">
        Compose New Blog
    </h1>

    <form action="/compose" method="post">
        <div class="form-group">
        <label class="cstm" for="title">Title</label>
        <input  type="text" class="form-control" name="title" >
        <label class="cstm" for="author">Author Name</label>
        <input  type="text" class="form-control" name="author" >
        <label class="cstm" for="imageurl">Image URL</label>
        <input  type="text" class="form-control" name="imgurl" >
        <label class="cstm" for="content">Post</label>
        <textarea  class="form-control" name="content" cols="38" rows="5"></textarea>
        </div>
        <button type="submit" class="cstm-mar btn btn-dark">publish</button>
    </form>
</div>
